@page "/services/{ServiceName}"
@inject Application application
@inject IApplicationProcessor applicationProcessor

@if (Service == null)
{
    <span>Unknown service @ServiceName</span>
}
else
{
    <h3>@Service.Description.Name</h3>

    switch (Service.ServiceType)
    {
        case ServiceType.Container:
            break;
        case ServiceType.Executable:
            break;
        case ServiceType.Project:
            break;
    }

    <hr />

    @if (Service.ServiceType == ServiceType.Project)
    {
        <button type="button" class="btn btn-primary" @onclick="async () => await RestartAsync(Service)">Restart</button>
        <hr />
    }

    <MetricsDisplay Service="_service" />
}

@code {
    private Service? _service;

    [Parameter]
    public string ServiceName { get; set; } = default!;

    public Service? Service => _service;

    protected override void OnInitialized()
    {
        application.Services.TryGetValue(ServiceName, out _service);
    }

    private async Task RestartAsync(Service service)
    {
        await applicationProcessor.StopAsync(service);
        await applicationProcessor.StartAsync(application, service);
    }
}